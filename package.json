{
  "name": "repo-event-notifier-lambda",
  "version": "0.0.0",
  "description": "An AWS lambda that monitors repos & talks to you in Slack",
  "license": "ISC",
  "author": "Gareth Jones",
  "main": "index.js",
  "scripts": {
    "check": "ttsc --noEmit",
    "compile": "ttsc -p src/tsconfig.json",
    "lint": "npm run lint:all --silent",
    "lint:all": "eslint \"**/*.{t,j}s{x,}\"",
    "lint:staged": "lint-staged",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx",
      "node"
    ],
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    },
    "resetMocks": true,
    "restoreMocks": true,
    "setupFilesAfterEnv": [],
    "testRunner": "jest-circus/runner",
    "transform": {
      "\\.tsx?": "ts-jest"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^10.14.9",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.6.4",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-circus": "^24.8.0",
    "lint-staged": "^8.2.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "ts-transform-paths": "^2.0.0",
    "ttypescript": "^1.5.7",
    "typescript": "^3.5.2"
  }
}
